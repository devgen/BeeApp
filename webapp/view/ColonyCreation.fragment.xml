<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog id="colonyCreation" title="Create new colony">
		<content>
			<f:SimpleForm id="colonyDetails" title="Colony details">
				<f:content>
					<Label text="{i18n>Carrid}"/>
					<Input type="Text" width="100%" id="Carrid"/>
					<Label text="{i18n>Connid}"/>
					<Input type="Text" width="100%" id="Connid"/>
					<Label text="{i18n>Carrid}"/>
					<Input type="Text" width="100%" id="To"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<Button text="SAVE" press="onAcceptDealog" type="Accept"/>
		<Button text="CLOSE" press="onCloseDialog" type="Reject"/>
	</Dialog>
</core:FragmentDefinition>