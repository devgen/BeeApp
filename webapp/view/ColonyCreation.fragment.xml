<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog id="colonyCreation" title="{i18n>ColonyCreationDialogTitle}">
		<content>
			<f:SimpleForm id="colonyDetails" title="{i18n>ColonyInfoText}">
				<f:content>
					<Label text="{i18n>ColonyID}"/>
					<Input type="Text" width="100%" id="ID"/>
					<Label text="{i18n>ColonyName}"/>
					<Input type="Text" width="100%" id="NAME"/>
					<Label text="{i18n>ColonyLonTitle}"/>
					<Input type="Text" width="100%" id="LON"/>
					<Label text="{i18n>ColonyLatTitle}"/>
					<Input type="Text" width="100%" id="LAT"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<Button text="SAVE" press="onAcceptDealog" type="Accept"/>
		<Button text="CLOSE" press="onCloseDialog" type="Reject"/>
	</Dialog>
</core:FragmentDefinition>